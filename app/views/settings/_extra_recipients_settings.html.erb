<%= content_tag(:p, l(:text_extra_recipients_general_settings)) %>

<p>
  <%= content_tag(:label, l(:label_extra_recipients_recipients), :for => 'settings_recipients') %>
  <%= text_area_tag('settings[recipients]', @settings['recipients'], :rows => 10, :cols => 80) %>
  <br />
  <%= content_tag(:em, l(:text_extra_recipients_recipients_hint)) %>
</p>

<p>
  <%= radio_button_tag('settings[private_project_visibility]', 'include_private', @settings['private_project_visibility'] == 'include_private', :id => 'include-setting') %>
  <%= content_tag(:label, l(:text_extra_recipients_recipients_included_in_email), :for => 'include-setting') %>
</p>

<p>
  <%= radio_button_tag('settings[private_project_visibility]', 'exclude_private', @settings['private_project_visibility'] == 'exclude_private', :id => 'exclude-setting') %>
  <%= content_tag(:label, l(:text_extra_recipients_recipients_not_included_in_email), :for => 'exclude-setting') %>
</p>

<p>
  <%= radio_button_tag('settings[private_project_visibility]', 'custom_projects', @settings['private_project_visibility'] == 'custom_projects', :id => 'custom-setting') %>
  <%= select_tag('settings[projects]', options_from_collection_for_select(Project.all, :id, :name, (@settings['projects'].collect! {|i| i.to_i} unless @settings['projects'].nil?)), :id => 'custom-projects-setting', :multiple => true) %>
  <%= content_tag(:label, l(:text_extra_recipients_custom_project_select), :for => 'custom-projects-setting') %>
</p>

<p>
  <%= select_tag('settings[new_status]', options_from_collection_for_select(IssueStatus.all, :id, :name, (@settings['new_status'].collect! {|i| i.to_i} unless @settings['new_status'].nil?)), :id => 'new-status-setting', :multiple => true) %>
  <%= content_tag(:label, l(:text_extra_recipients_new_status), :for => 'new-status-setting') %>
</p>
